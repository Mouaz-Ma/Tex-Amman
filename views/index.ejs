  <!-- Custom styles for this template -->
  <link href="/stylesheets/style.css" rel="stylesheet">
    <main>
      <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center mt-3">
        <div class="row align-items-center">
          <% if(error && error.length) {%>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% } %>
              <% if(success && success.length) {%>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                  <%= success %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %>


                  <div class="row">
                    <div class="col-md-6">
                      <h3 class="white text-center">قم بحجز تذكرتك في معرض معرفة للجامعات التركية</h3>
                      
                      <form class="form" action="/scan" method="POST">
                            <!-- Name -->
                            <input id="Name" name="Name" type="text" class="form-control" placeholder="الاسم الكامل"
                              required>
                            <!-- email -->
                            <input name="email" id="email" type="email" class="form-control"
                              placeholder="البريد الالكتروني">
                            <!-- telephone number  -->
                            <input class="form-control" id="phone" type="number" name="telephonNumber" placeholder="رقم الهاتف" required>
                            <br>
                            <button id="generator" type="submit" class="btn btn-secondary btn-lg btn-block  mt-2"
                              value="Get QR">إرسال
                            </button>
                          
                        
                      </form>
                    </div>
                    <div class="col-md-6 mt-5">
                      <img src="/images/Asset 1.png" alt="" height="80%" width="50%">
                    </div>

                  </div>
                  <br>

        </div>
