<title>Tex Amman -  ملتقى الجامعات التركية في عمان </title>
  <!-- Custom styles for this template -->
  <link href="/stylesheets/style.css" rel="stylesheet">
    <main>
      <div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center mt-3">
        <div class=" align-items-center">
          <% if(error && error.length) {%>
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <%= error %>
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                  <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <% } %>
              <% if(success && success.length) {%>
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                  <%= success %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                      <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <% } %>


                  <div class="row">
                    <div class="col-md-6">
                      <h3 class="white text-center">قم بحجز تذكرتك لملتقى الجامعات التركية في الأردن</h3>
                      
                      <form class="form" action="/scan" method="POST">
                        <!-- Name -->
                        <input id="Name" name="Name" type="text" class="form-control" placeholder="الاسم / Full Name"
                          required>
                        <!-- email -->
                        <input name="email" id="email" type="email" class="form-control"
                          placeholder="الايميل/ Email">
                        <!-- telephone number  -->
                        <input class="form-control" id="phone" type="number" name="telephonNumber" placeholder="رقم الهاتف/ Phone Number " required>
                        <label class="white mt-3" for="heardBy">كيف سمعت عنا؟</label>
                        <select class="form-control" name="heardBy" id="heardBy" >
                          <option value="other">Other/أُخرى</option>
                          <option value="google Search">Google/بحث غوغل</option>
                          <option value="instagram">Instagram/ انستغرام</option>
                          <option value="facebook">Facebook/ فيسبوك</option>
                          <option value="influencer">Influencer/ مؤثر</option>
                        </select>
                        <br>
                        <button id="generator" type="submit" class="btn btn-secondary btn-lg btn-block  mt-2"
                          value="Get QR">ارسال/Send </button>
                      
                    
                  </form>
                    </div>
                    <div class="col-md-6">
                      <img src="/images/Asset 4.png" alt="" id="imageAsset">
                      <p class="lead mt-4 text-center white">فندق لاند مارك عمان</p>
                      <p class="lead  text-center white">تاريخ: 6/8 الساعة 11:00 صباحاً </p>

                    </div>

                  </div>
                  <br>

        </div>
      </div>
  </div>
